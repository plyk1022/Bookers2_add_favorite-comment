<h2>Follower Users</h2>

<% if @user.follower_user.count == 0 %>
  <p>ユーザーはいません</p>
<% else %>
  <% @users.each do |user| %>
    <table class = "table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(50, 50) %></td>
          <td><%= user.name %></td>
          <td><%= "フォロー数:#{user.following_user.count}" %></td>
          <td><%= "フォロワー数:#{user.follower_user.count}" %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% end %>